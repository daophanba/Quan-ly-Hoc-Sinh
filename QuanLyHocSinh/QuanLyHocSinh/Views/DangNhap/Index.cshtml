@{
}

<button type="button" class="btn btn-primary TaoTaiKhoan">Tạo tài khoản</button>


<div class="modal fade ModalTaoTaiKhoan" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tạo tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Tên</label>
                    <input type="text" class="form-control TenTaiKhoan">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                    <input type="text" class="form-control MatKhau">
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Nhập lại mật khẩu</label>
                    <input type="text" class="form-control MatKhauNhapLai">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary ThemTaiKhoan">Lưu</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
           
        });
        $(".TaoTaiKhoan").click(function () {
            $(".ModalTaoTaiKhoan").modal("show");
        });
        $(".ThemTaiKhoan").click(function () {
            var objData = {};
            objData.TenTaiKhoan = $(".TenTaiKhoan").val();
            objData.MatKhau = $(".MatKhau").val();
            objData.MatKhauNhapLai = $(".MatKhauNhapLai").val();
            $.ajax({
                url: '/DangNhap/Index',
                data: objData,
                type: 'POST',
                dataType: 'json',

                success: function (response) {

                    if (response.start === true) {
                        location.reload();
                    }
                    else {
                        alert(" " + response.message);
                    }
                },
                failure: function (response) {

                },
                error: function (response) {

                }
            });
        });
    </script>

}